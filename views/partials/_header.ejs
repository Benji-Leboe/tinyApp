<!-- views/partials/header.ejs -->

<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-dark pl-4 pr-4">
  <a class="navbar-brand text-light ml-2" href="/">TinyApp</a>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <!--Navbar links-->
    <div class="navbar-nav">
      <a class="nav-item nav-link active text-light" href="/">Home</a>
      <a class="nav-item nav-link text-light" href="/about">About</a>
      <a class="nav-item nav-link text-light" href="/urls">URLs</a>
      <% if(user !== undefined) { %>
      <a class="nav-item nav-link text-light" href="/urls/new">Shorten URL</a>
      <% } %>  
    </div>

    <!--Login/register/welcome-->
    <% if(user === undefined){ %>
      <div class="form-inline pt-1 pb-1 ml-auto">
        <a class="btn btn-primary text-white btn-md mr-2 ml-2" style="width: 100px" href="/login">Login</a>
        <a class="btn btn-primary text-white btn-md mr-2 ml-2" style="width: 100px" href="/register">Register</a>
      </div>
    <% } else { %>
      <form class="form-inline ml-auto" method="POST" action="/logout">
        <div class="form-group pt-1 pb-1">
          <label class="text-light mr-1 pl-1">Welcome, <%= user.username %>!</label>
          <button type="submit" class="btn btn-primary btn-md mr-2 ml-2" style="width: 100px">Log Out</button>
        </div>
      </form>
    <% } %>  
  </div>
</nav>