<!-- views/partials/header.ejs -->

<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-dark pl-4 pr-4">
  <a class="navbar-brand text-light ml-2" href="/">TinyApp</a>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <!--Navbar links-->
    <div class="navbar-nav">
      <a class="nav-item nav-link active text-light" href="/">Home</a>
      <a class="nav-item nav-link text-light" href="/about">About</a>
      <a class="nav-item nav-link text-light" href="/urls">URLs</a>
      <a class="nav-item nav-link text-light" href="/urls/new">Shorten URL</a>  
    </div>

    <!--Login form-->
    <% if(username === undefined){ %>
    <form class="form-inline ml-auto" method="POST" action="/login">
      <div class="form-group pt-1 pb-1">
        <label for="userLogin" class="text-light mr-1 pl-1">Login:</label>
        <input type="text" style="width: 250px" class="form-control mr-1 ml-1 pr-1 pl-1" id="userLogin" name="userLogin" placeholder="Username">
        <input type="text" style="width: 250px" class="form-control mr-1 ml-1 pr-1 pl-1" id="password" name="password" placeholder="Password">
        <button type="submit" class="btn btn-primary btn-md mr-2 ml-2">Submit</button>
        <a class="btn btn-primary text-white btn-md mr-2 ml-2" href="/register">Register</a>
      </div>
    </form>
    <% } else { %>
      <form class="form-inline ml-auto" method="POST" action="/logout">
        <div class="form-group pt-1 pb-1">
          <label class="text-light mr-1 pl-1">Welcome, <%= username %>!</label>
          <button type="submit" class="btn btn-primary btn-md mr-2 ml-2">Log Out</button>
        </div>
      </form>
    <% } %>  
  </div>
</nav>