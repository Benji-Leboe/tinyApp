<!-- views/pages/urls_index.ejs -->

<!DOCTYPE html>
<html>
<head>
  <% include ../partials/_head %>
</head>
<body class="pb-5">

  <div class="container-fluid">

    <div class="container-fluid">
      <header>
        <% include ../partials/_header %>
      </header>
    </div>
    
    <div class="container-fluid">
      <main>
        <div class="jumbotron">
            <p class="row justify-content-lg-center lead mt-2 mb-2 pt-1 pb-1">Currently shortened URLs:</p>
            <div class="row justify-content-lg-center mt-5 mb-5">
              
              <div class="list-group">
                <% for(let url in urls){ %>
                  <div class="row pt-2 pb-1 mt-2 mb-1">
                      <p class="list-group-item mt-1 mb-1 pt-1 pb-1"><%= urls[url] %>: <%= url %></p>
                      <form class="form-inline" method="POST" action="/urls/<%= url %>/delete">
                        <button type="submit" class="btn btn-sm mt-1 mb-1 mr-1 ml-1 pt-1 pb-1 pr-1 pl-1 pull-right">Delete</button>
                      </form>
                  </div>
                  <div class="row pb-2 mb-2">
                      <div class="col-xs-8">
                          <form class="form-inline" method="POST" action="/urls/<%= url %>">
                            <input id="longURL" type="text" name="longURL" placeholder="http://" style="width: 300px">
                            <button type="submit" class="btn btn-sm mt-1 mb-1 mr-1 ml-1 pt-1 pb-1 pr-1 pl-1">Edit URL</button>
                          </form>
                      </div>
                  </div>
                <% }; %>
              </div>
            </div>
            <div class="row justify-content-md-center mt-5 mb-5">
              <a class="btn btn-primary btn-lg" href='urls/new'>Click here to shorten your URL!</a>
            </div>
            
        </div>
      </main>
    </div>
  
    <div class="container-fluid fixed-bottom">
      <footer class="footer">
        <% include ../partials/_footer %>
      </footer>
    </div>

  </div>

</body>
</html>
